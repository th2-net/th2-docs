{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "noImplicitReturns": true,
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "gridsome.config.js",
    "gridsome.server.js",
    "node_modules",
    "./src/plugins",
    "./cypress/**/*.ts"
  ]
}
