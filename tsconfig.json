{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "noImplicitReturns": true,
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "checkJs": false,
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "gridsome.config.js",
    "gridsome.server.js",
    "node_modules"
  ]
}
